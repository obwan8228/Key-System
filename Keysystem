local Players = game:GetService("Players")

-- List of admin usernames
local ADMINS = {
    "TheBizarreGuest",
    "catvsobi",
    "obi"
}

-- Function to check if a player is an admin
local function isAdmin(name)
    for _, adminName in ipairs(ADMINS) do
        if name:lower() == adminName:lower() then
            return true
        end
    end
    return false
end

-- Function to connect admin commands
local function connectAdmin(player)
    print("Admin connected:", player.Name)
    player.Chatted:Connect(function(msg)
        local msgLower = msg:lower()

        -- Command: ,s <username>
        if msgLower:sub(1,3) == ",s " then
            local targetName = msg:sub(4)
            local target

            for _, p in ipairs(Players:GetPlayers()) do
                if p.Name:lower() == targetName:lower() then
                    target = p
                    break
                end
            end

            if target then
                print("Kicking:", target.Name)
                target:Kick("Kicked by admin " .. player.Name)
            else
                print("Player not found:", targetName)
            end
        end
    end)
end

-- When players join
Players.PlayerAdded:Connect(function(player)
    if isAdmin(player.Name) then
        connectAdmin(player)
    end
})

-- For admins already in the game
for _, p in ipairs(Players:GetPlayers()) do
    if isAdmin(p.Name) then
        connectAdmin(p)
    end
end

print("[âœ…] Admin chat kick command active for admins:", table.concat(ADMINS, ", "))
